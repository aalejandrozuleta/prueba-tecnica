{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "ES2021",
    "types": ["node"],

    "outDir": "./dist",
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "incremental": true,
    "declaration": true,
    "removeComments": true,

    "strict": true,
    "strictNullChecks": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,


    "baseUrl": "./",
    "paths": {
      "@auth/*": ["src/*"],
      "@/application/*": ["src/application/*"],
      "@/domain/*": ["src/domain/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/config/*": ["src/config/*"],
      "@/modules/*": ["src/modules/*"],
      "@/schemas/*": ["src/schemas/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
